    scheduleCountdownTimer = setInterval(()=>{
      if(!scheduleCountdownTargetTs){
        stopScheduleCountdown();
        return;
      }
      updateScheduleCountdownDisplay();
    }, 500);
  }

  function stopScheduleCountdown(clearTarget=true){
